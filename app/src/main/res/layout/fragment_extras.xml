<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExtrasFragment">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#9C27B0"
            android:fontFamily="@font/crt"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:text="Asked in Companies"
            />
        <TextView
            android:id="@+id/company"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:padding="7dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_grey_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salesforce,Google,Amazon,MindTree" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#9C27B0"
            android:fontFamily="@font/crt"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:text="SDE sheet's"
            />
        <TextView
            android:id="@+id/sdesheet"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:padding="7dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_grey_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Striver's SDE Sheet,Love Babber SDE Sheet" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#9C27B0"
            android:fontFamily="@font/crt"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:text="Related Links"
            />
        <TextView
            android:id="@+id/Links"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:padding="7dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_grey_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leetcode \nlink:-https:\\\\leetcode.com \nHackerrank \nLink:-https: \\\\hackerRank.com" />
    </LinearLayout>

</LinearLayout>